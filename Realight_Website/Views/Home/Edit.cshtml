@model IEnumerable<Realight_Website.Models.Player>

@{
    ViewData["Title"] = "Profile";
}

<div>
    @foreach (var item in Model)
    {
        <div class="container-fluid">
            <!--Photo + World Header-->
            <div class="row equalheight">
                <div class="col-1"></div>
                <div class="details-header-container col-10">
                    <div>
                        <p class="details-header-content">
                            <span style="font-size:1.5em">@Html.DisplayFor(modelItem => item.name)</span>
                            <br />
                            <span style="font-size:1em">Edit Profile Page</span>
                        </p>
                    </div>
                </div>
                <div class="col-1"></div>
            </div>
            <!--Header for the content-->

            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10 details-container">
                    <form method="post" asp-action="Edit" asp-controller="Home">
                        <fieldset class="loginFieldset">
                            <p>
                                <span style="font-size:1.2em">Edit Status</span>
                                <a class="EditProfile" asp-action="Edit" asp-controller="Home" name="toEdit" value="Status"></a>
                                <br />
                                <span>
                                    @Html.DisplayFor(modelItem => item.status)
                                </span>
                                <div class="box">
                                    <div class="input-wrapper">
                                        <input type="text" id="status" class="form-control" placeholder="Status" value="@ViewData["status"]" name="status">
                                        <label for="input" class="control-label">Status</label>
                                    </div>
                                </div>
                            </p>
                            <br />
                            <p>
                                <span style="font-size:1.2em">Edit Biography</span>
                                <a class="EditProfile" asp-action="Edit" asp-controller="Home" name="toEdit" value="Biography"></a>
                                <br />
                                <span>
                                    @Html.DisplayFor(modelItem => item.biography)
                                </span>
                                <div class="box">
                                    <div class="input-wrapper">
                                        <input type="text" id="biography" class="form-control" placeholder="Biography" value="@ViewData["biography"]" name="biography">
                                        <label for="input" class="control-label">Biography</label>
                                    </div>
                                </div>
                            </p>
                            <br />

                            <input type="submit" id="submitBtn" class="submitButton" value="Edit" />
                            <br />
                            <span style="color:darkred;">@TempData["Message"]</span>

                        </fieldset>
                    </form>
                    <br />
                </div>
                <div class="col-md-1"></div>

            </div>

        </div>
    }
</div>

