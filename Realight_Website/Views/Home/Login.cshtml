@{
    ViewData["Title"] = "Login";
}

<body>
    <div class="row">
        <div class="col-1"></div>
        <div style="position:fixed; left:0; right:0;" class="col-10" id="login_div">
            <fieldset class="loginFieldset">
                <legend>Login</legend>
                <input type="email" id="email" required placeholder="Email Address" /><br />

                <input type="password" id="password" style="width:100px" required placeholder="Password" />
                <button onclick="login()">Login</button>
                <br />
                <span style="color:darkred;">@TempData["Message"]</span>

            </fieldset>
            <a class="nav-link" asp-controller="Home" asp-action="Register">Click here to Register!</a>
        </div>
        <div id="user_div">
            <h3>Welcome User</h3>
            <p>Welcome to Realight. You're currently logged in.</p>
        </div>

        <div class="col-1"></div>
    </div>

